<h1>Startup Sprint!</h1>
<img src="images/learnco.png">

<h3>Subscribe to the Startup Sprint newsletter</h3>
  <form method=POST action="/subscribe">

<% if @error == 'email' %>
  <p style="color: red;">Please enter a valid email</p>
  <label for="full-name">Full Name</label>
  <input type="text" id="full-name" name="full_name" value=<%= @name %> required>

  <label for="email">Email</label>
  <input type="text" id="email" name="email" placeholder="address@domain.com" required autofocus="true">

  <label for="city">City</label>
  <input type="text" id="city" name="city" value=<%= @city %> required>
  <input type="Submit">
  </form>

  <a href="/splash">splash</a>
<% else %>

  <label for="full-name">Full Name</label>
  <input type="text" id="full-name" name="full_name" required>
  <label for="email">Email</label>
  <input type="text" id="email" name="email" placeholder="address@domain.com" required>
  <label for="city">City</label>
  <input type="city" id="city" name="city">
  <input type="Submit">
</form>
  <a href="/splash">splash</a>

<% end %>
